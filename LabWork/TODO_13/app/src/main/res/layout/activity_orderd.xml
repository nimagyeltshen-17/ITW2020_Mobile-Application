<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".OrderdActivity">


    <TextView
        android:id="@+id/message_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:layout_marginLeft="18dp"
            android:textStyle="italic"
            android:text="Name" />

        <EditText
            android:id="@+id/name_editText_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your name here"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="Address" />

        <EditText
            android:id="@+id/address_editText_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your address here"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="phone" />

        <EditText
            android:id="@+id/phone_editText_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your number here"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:textSize="18sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/note_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:layout_marginLeft="18dp"
            android:textStyle="italic"
            android:text="Note" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your number here"
            android:inputType="text"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:layout_marginLeft="18dp"
            android:textStyle="italic"
            android:text="Choose a delivery method:"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dp">

            <RadioButton
                android:id="@+id/same_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Same day Messenger service"
                android:onClick="OrderedItem"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/next_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next day ground delivery"
                android:checked="true"
                android:onClick="OrderedItem"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/pick_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick up"
                android:onClick="OrderedItem"
                android:textSize="18sp"/>
        </RadioGroup>

    </LinearLayout>

</LinearLayout>